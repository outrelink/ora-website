{
  "rewrites": [
    {
      "source": "/privacy-policy",
      "destination": "/privacy.html"
    },
    {
      "source": "/terms-of-service",
      "destination": "/terms.html"
    },
    {
      "source": "/contact",
      "destination": "/contact.html"
    },
    {
      "source": "/subscribe",
      "destination": "/subscribe.html"
    },
    {
      "source": "/subscription-success",
      "destination": "/subscription-success.html"
    },
    {
      "source": "/subscription-cancel",
      "destination": "/subscription-cancel.html"
    },
    {
      "source": "/oauth/callback",
      "destination": "/oauth/callback.html"
    },
    {
      "source": "/webhook",
      "destination": "/api/webhook"
    },
    {
      "source": "/admin",
      "destination": "/admin.html"
    },
    {
      "source": "/api/admin/:path*",
      "destination": "/api/admin/:path*"
    },
    {
      "source": "/api/create-checkout-session",
      "destination": "/api/create-checkout-session"
    },
    {
      "source": "/api/webhook",
      "destination": "/api/webhook"
    },
    {
      "source": "/api/cancel-subscription",
      "destination": "/api/cancel-subscription"
    },
    {
      "source": "/api/subscription-status/:userId",
      "destination": "/api/subscription-status/[userId]"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

